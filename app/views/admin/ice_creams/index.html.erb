<p class="text-3xl font-kiwi pt-12 text-center">管理画面アイス一覧</p>
<div class="pt-6 flex justify-center">
    <%= link_to '新しいアイスを追加', new_admin_ice_cream_path, class: 'bg-stone-300 hover:bg-stone-400 text-stone-800 text-lg font-kiwi py-4 px-8 rounded-lg mt-6 ml-4 inline-block ' %>
</div>

<div class="mx-auto max-w-7xl px-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-2 mt-6">
        <% @ice_creams.each do |ice_cream| %>
            <div class="bg-white shadow-md rounded-lg p-4 ">
                <h2 class="font-kiwi text-xl"><%= ice_cream.name %></h2> 
                <p class="text-gray-700 font-kiwi"><%= ice_cream.comment %></p>
                <div class="mt-2">
                    <% if ice_cream.image.attached? %>
                        <%= image_tag ice_cream.image, class: 'h-40 w-auto' %>
                    <% else %>  
                        <p class="text-gray-500">画像がまだありません</p>
                    <% end %>
                </div>
                <div class="mt-auto">
                    <%= link_to 'アイスの詳細', admin_ice_cream_path(ice_cream), class: 'text-black-500 hover:underline font-kiwi' %>  
                </div>
            </div>
        <% end %>
    </div>
</div>


