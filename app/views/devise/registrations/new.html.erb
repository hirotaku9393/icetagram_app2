<h2 class="pt-30 font-kiwi text-4xl text-black-60 text-center">新規登録</h2>

<div class="mx-auto bg-amber-50 shadow-md rounded-lg p-6 max-w-md mt-6">
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false } }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field flex flex-col items-center mt-4">
      <%= f.label :name, class: "w-64 text-center font-kiwi text-gray-700" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name",  class: "px-10 py-2 border border-gray-300 rounded-md " %>
    </div>

    <div class="field flex flex-col items-center mt-4">
      <%= f.label :email,class: "w-64 text-center font-kiwi text-gray-700" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "px-10 py-2 border border-gray-300 rounded-md "  %>
    </div>

    <div class="field flex flex-col items-center mt-4">
      <%= f.label :password,class: "w-64 text-center font-kiwi text-gray-700" %><br />
      <%= f.password_field :password, autocomplete: "new-password",  class: "px-10 py-2 border border-gray-300 rounded-md "   %>
    </div>

    <div class="field flex  flex-col items-center mt-4">
      <%= f.label :password_confirmation,class: "w-64 text-center font-kiwi text-gray-700" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "px-10 py-2 border border-gray-300 rounded-md "   %>
    </div>

    <div class="field flex  flex-col items-center mt-4 ">
      <%= f.submit "登録する", class: "bg-stone-300 hover:bg-stone-400 text-stone-800 font-kiwi py-2 px-4 rounded w-64 mx-auto" %>
    </div>
  <% end %>

  <div class="mt-4 text-center font-kiwi">
    <div class="flex flex-col items-center space-y-2 mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <% if flash[:alert] %>
    <div class="custom-alert">
      <span class="close" onclick="this.parentElement.style.display='none';">&times;</span>
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>