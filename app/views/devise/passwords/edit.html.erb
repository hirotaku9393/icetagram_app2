<h2 class="pt-30 font-kiwi text-4xl text-black-60 text-center">パスワード再設定</h2>

<div class="mx-auto bg-amber-50 shadow-md rounded-lg p-6 max-w-md mt-6 text-center">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "新しいパスワード", class: "w-64 text-left font-kiwi text-gray-700" %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password",  class: "px-10 py-2 border border-gray-300 rounded-md " %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "w-64 text-left font-kiwi text-gray-700" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "px-10 py-2 border border-gray-300 rounded-md " %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードを変更", class: "my-4 w-65 bg-stone-300 hover:bg-stone-400 text-stone-800 font-kiwi py-2 px-4 rounded" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>