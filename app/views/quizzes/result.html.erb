<meta property="og:title" content="<%= @og_title %>">
<meta property="og:description" content="<%= @og_description %>">
<meta property="og:image" content="<%= asset_url(@og_image) %>">
<meta property="og:url" content="<%= @og_url %>">
<meta property="og:type" content="website">

<div class="mx-auto bg-amber-50 shadow-md rounded-lg p-6 max-w-5xl mt-6 font-kiwi text-center  flex flex-col items-center justify-center">
    <h2 class="text-2xl font-kiwi mb-4 text-center">あなたのスコア: <%= @score %> / 10 <%=  @title_message %></h2>
    <p class="text-2xl font-kiwi mb-4 text-center"><%= @message %></p>
    <img src="<%= @og_image %>" class="w-96" alt="結果画像">

    <div class="twitter pt-5 flex justify-center font-kiwi gap-4 mt-1 mb-6">
        <%= link_to "https://twitter.com/intent/tweet?" + "text=#{@og_title}あなたは#{@message}!\n" + "&url=#{request.base_url}#{request.path}?score=#{@score}", class: "bg-blue-400 hover:bg-blue-500 text-white font-kiwi py-4 px-8 text-xl rounded-3xl flex items-center gap-2 twitter-share-button", target: "_blank", rel: "noopener" do %>
            <iconify-icon icon="simple-icons:x" width="24" height="24"></iconify-icon>
            <span>結果をツイートする</span>
        <% end %>
    </div>

    <div class="flex justify-center">
        <%= link_to explanation_quizzes_path, class: "bg-stone-300 hover:bg-stone-400 text-stone-800 text-md font-kiwi py-4 px-8 rounded-3xl  gap-2 w-64 " do %>
                <span class="text-center text-md leading-tight font-kiwi">解説を見る</span>
        <% end %>
    </div>
</div>