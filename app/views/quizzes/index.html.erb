<div class="mx-auto bg-amber-50 shadow-md rounded-lg p-6 max-w-3xl mt-６ font-kiwi text-center  flex flex-col items-center justify-center">
    <h1 class="text-2xl font-kiwi mb-4 text-center mt-6">IQ(Icecream Question)てすと 10問ちゃれんじ!</h1>
    <h2 class="text-2xl font-kiwi mb-4 text-center">あいすの覇者を目指すのじゃ！！</h2>

    <%= form_with url: check_quizzes_path, method: :post, data: { turbo: false } do |f| %>
        <% @quizzes.each_with_index do |quiz, i| %>
            <div class="quiz mb-6 max-w-md text-left">
            <p><strong>Q<%= i+1 %>:</strong> <%= quiz[:question] %></p>
            <% quiz[:options].each do |option| %>
                <label>
                <%= radio_button_tag "answers[#{i}]", option %> <%= option %>
                </label><br>
            <% end %>
            </div>
        <% end %>
        <%= submit_tag "回答!!", class: " bg-stone-300 hover:bg-stone-400 text-stone-800 text-lg font-kiwi py-4 px-8 rounded-3xl gap-2 w-40" %>
    <% end %>
</div>
